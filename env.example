APP_NAME="Dabablane Backend"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
FRONTEND_URL=http://localhost:5173

# Extra API verification token used by this codebase (see config/app.php)
FRONTEND_TOKEN=

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=dabablane
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_CONNECTION=log
CACHE_STORE=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file

# CORS (comma-separated). Use '*' for any origin.
# Example: CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend.com
CORS_ALLOWED_ORIGINS=*

# Sanctum (only relevant if you use cookie-based SPA auth)
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:5173,127.0.0.1,127.0.0.1:8000

# JWT (if used)
JWT_SECRET=
JWT_TTL=60

# Mail
MAIL_MAILER=log
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="Dabablane"
MAIL_CONTACT_ADDRESS="contact@example.com"

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_KEY=
CLOUDINARY_SECRET=
CLOUDINARY_URL=
CLOUDINARY_UPLOAD_PRESET=
CLOUDINARY_BLANES_FOLDER="blanes/videos"

# Bunny CDN / Storage
BUNNY_STORAGE_ZONE=
BUNNY_API_KEY=
BUNNY_CDN_URL=
BUNNY_STORAGE_ENDPOINT=storage.bunnycdn.com
BUNNY_BLANES_FOLDER=blanes

